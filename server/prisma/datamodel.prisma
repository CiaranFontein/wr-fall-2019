type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  campaigns: [Campaign!]!
}

type Event{
   id: ID! @id
   title: String! @unique
   createdAt: DateTime! @createdAt
   location: String!
   image: String!
   description: String!
   comments: [Comment!]!
}

type Campaign {
  id: ID! @id
  title: String! @unique
  category: String!
  description: String!
  events: [Event!]!
  image: String!
  subscribers: [User!]!
}

type Comment{
   id: ID! @id
   username: String!
    createdAt: DateTime! @createdAt
    comment: String!
}